
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/fontawesome/css/solid.css" rel="stylesheet">
    <link href="~/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />

    <title>Login</title>
</head>

<style>
    a{
        text-decoration: none;
    }
    a:hover{
        color: black;
    }
    :root{
        --color-primary: #ff8086;
        --color-primary-bold: #ff6b72;
    }
    .btn-style-pink{
        margin-top: 10px;
        border-radius: 50px;
        padding: 8px 25px;
        border: none;
        background-color: var(--color-primary);
        color: var(--color-text-white);
        transition: .5s;
        opacity: 0.9;
        border: 2px solid transparent;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .btn-style-pink:hover{
        transition: .5s;
        opacity: 1;
        background-color: transparent;
        box-shadow: 0px 0px 10px var(--color-primary-bold);
        border: 2px solid var(--color-primary-bold);
    }
    #img-left, #logo-form{
        object-fit: cover;
    }
    html{
        overflow:hidden;
    }
    body{
        background: rgb(243,150,155);
        background: linear-gradient(225deg, rgb(255, 178, 182) 0%, rgba(252,224,229,1) 100%);
    }
    #btn-register input, #btn-register a{
        width: 45%;
    }
    @@media only screen and (max-width:1200px) {
        #formControl{
            height: 100vh;
            display: flex;
            align-items: center;
        }
        #img-left{
            display: none;
        }
    }
</style>

<body>
    <div class="container-fluid h-100">
        <div class="row row-cols-sm-1 row-cols-lg-2 d-flex align-items-center">
            <div class="col p-0">
                <div id="img-left">
                    <img src="~/images/3344439.jpg" class="w-100" />
                </div>
            </div>
            <div id="formControl" class="col d-flex justify-content-center">
                <div class="w-75">
                    <div id="logo-form" class="d-flex justify-content-center mb-5 position-relative">
                        <a href=@Url.Action("Index","Home") class="position-absolute" style="left: 0px; top: -40px;"> 
                            <i class="text-white fa-solid fa-house" style="letter-spacing: 1px;">
                                <span style="font-size: 13px; font-family: Arial; font-weight: 700;"> Back To Home</span>
                            </i>
                        </a>
                        <h1 class="text-white">Register</h1>
                    </div>
                    <form action="#" method="post" class="w-100 h-100">
                        <div class="form-group">
                            <label class="text-white" for="email-login">Email</label>
                            <input type="text" name="username" id="email-login" class="form-control" placeholder="Username" required />
                        </div>
                        <div class="form-group mt-3">
                            <label class="text-white" for="password-login">Password</label>
                            <input type="password" name="password" id="password-login" class="form-control" placeholder="Your Password" required />
                        </div>
                        <div class="form-group mt-3">
                            <label class="text-white" for="password-login">Password</label>
                            <input type="password" name="password" id="password-login" class="form-control" placeholder="Re-type Your Password" required />
                        </div>
                        <div id="btn-register" class="mt-5 d-flex justify-content-between">
                            <a href=@Url.Action("Login","User") class="btn-style-pink text-center">
                                Login
                            </a>
                            <input class="btn btn-style-pink ms-5" type="submit" value="Register" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- js for icon -->
    <script src="~/fontawesome/js/fontawesome.min.js"></script>
    <!-- js boostrap -->
    <script src="~/boostrap5/js/bootstrap.bundle.min.js"></script>
    <!-- fontawsome -->
    <script src="https://kit.fontawesome.com/e38254d31d.js" crossorigin="anonymous"></script>
</body>
</html>
