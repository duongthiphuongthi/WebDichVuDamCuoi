
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Exo:wght@100&display=swap" rel="stylesheet">
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/styles/style_index.css" rel="stylesheet">
    <link href="~/fontawesome/css/solid.css" rel="stylesheet">
    <link href="~/fontawesome/css/brands.css" rel="stylesheet">
    <link href="~/fontawesome/css/regular.css" rel="stylesheet">
    <link href="~/fontawesome/css/fontawesome.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <!-- preloader -->
    <div class="preloader overflow-hidden" style="background-color:#fff4f5;">
        <div class="d-flex overflow-hidden justify-content-center align-content-center align-items-center h-100">
            <img src="/images/heart.gif" class="overflow-hidden" style="object-fit:cover; width: 500px;" />
        </div>
    </div>
    <!-- header -->
    <header id="header" style="margin-bottom: 100px;">
        <!-- menu -->
        <div id="navigate" class="container-fluid">
            <div class="container">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid d-flex text-white">
                        <div id="logo" class="me-3">
                            <a class="navbar-brand" href="/Home/Index">
                                <img src="~/images/logo2.png" class="w-100 h-100">
                            </a>
                        </div>
                        <div class="collapse navbar-collapse justify-content-lg-end" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="/Home/Index">Trang Chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/TinTuc/Index">Tin Tức</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/SanPham/Index">Sản Phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Dichvu/Index">Dịch Vụ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Contact/Index">Liên Hệ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href=@Url.Action("Login","User")>Đăng Nhập</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href=@Url.Action("Register","User")>Đăng Ký</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <!-- menu for mobile -->
        <div id="iconMenuMobile">
            <i class="fa-solid fa-bars"></i>
        </div>
        <div id="menuForMobile" class="container-fluid p-0 h-100">
            <div id="contentMenuMobile" class="d-flex container-fluid justify-content-center align-items-center w-100 h-100">
                <div id="logoMobile" class="me-3">
                    <a class="navbar-brand" href="/Home/Index">
                        <img src="~/images/logo2.png" class="w-100 h-100">
                    </a>
                </div>
                <ul class="p-0 text-center">
                    <li>
                        <a href="/Home/Index">Trang Chủ</a>
                    </li>
                    <li>
                        <a href="/Contact/Index">Liên Hệ</a>
                    </li>
                    <li>
                        <a href="/TinTuc/Index">Tin Tức</a>
                    </li>
                    <li>
                        <a href="/DichVu/Index">Dịch Vụ</a>
                    </li>
                    <li>
                        <a href="/User/Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- content in header -->
        <div class="container pt-5 ps-md-5 pe-md-5 h-100 d-flex align-items-center justify-content-center" style="min-height: 800px;">
            <div id="content-header" class="w-100">
                <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2">
                    <div class="col d-flex align-items-center">
                        <div class="w-100">
                            <h6>Wedding coordination</h6>
                            <h1 class="text-uppercase">Chúng tôi cung cấp<br />Dịch vụ đám cưới</h1>
                            <button>
                                <span>Wedding Services</span>
                                <i class="fa-solid fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col position-relative">
                        <div id="bride-object">
                            <img src="~/images/bride.png" class="w-100" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--icon croll -->
        <div id="crollDown">
            <div class="croll">
                <div class="chevron"></div>
                <div class="chevron"></div>
                <div class="chevron"></div>
            </div>
        </div>
    </header>

    @RenderBody()

    <!--footer-->
    <footer class="position-relative p-0 mt-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-md-3">
                <div class="col">
                    <ul class="footer-menu me-lg-5">
                        <li><a href="javascript:void(0)">Show Room 1</a></li>
                        <li><a href="javascript:void(0)">Show Room 2</a></li>
                        <li><a href="javascript:void(0)">Show Room 3</a></li>
                        <li><a href="javascript:void(0)">Show Room 4</a></li>
                        <li><a href="javascript:void(0)">Show Room 5</a></li>
                    </ul>
                    <ul class="footer-menu ms-lg-5">
                        <li><a href="/Home/Index">Trang Chủ</a></li>
                        <li><a href="/SanPham/Index">Sản Phẩm</a></li>
                        <li><a href="/Contact/Index">Liên Hệ</a></li>
                        <li><a href="/DichVu/Index">Dịch Vụ</a></li>
                        <li><a href="/TinTuc/Index">Tin Tức</a></li>
                    </ul>
                </div>
                <div class="col pt-sm-3" style="border-left: 1px solid #ededed; border-right: 1px solid #ededed;">
                    <div class="container w-100 h-100">
                        <img style="filter: drop-shadow(1px 1px 1px rgba(149, 149, 149, 0.8));" src="~/images/logo2.png" width="50%">
                    </div>
                </div>
                <div class="col pt-sm-3 text-start ps-5 ">
                    <h5>Showroom</h5>
                    <ul id="info-showroom">
                        <li>
                            140 Lê Trọng Tấn, Tân Phú, TP. HCM
                            Thứ 2 – Thứ 6: 8am – 4pm
                            Thứ 7: 9am – 5pm
                        </li>
                        <li>
                            <ul>
                                <li>Thứ 2 – Thứ 6: 8am – 4pm</li>
                                <li>Thứ 7: 9am – 5pm</li>
                            </ul>
                        </li>
                    </ul>
                    <h5 class="d-inline-block pe-2">Follow Us: </h5>
                    <ul class="d-inline-block" id="footer-socials">
                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa-brands fa-facebook"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa-brands fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa-brands fa-google-plus"></i>
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0)">
                                <i class="fa-brands fa-tiktok"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        <div style="border-top: 1px solid #ededed;" class="container-fluid pb-2 pt-2 mt-5 position-absolute">
            <p>&copy; Copyright 2022 Black Horse</p>
        </div>
    </footer>

    <!-- croll to top -->
    <div id="crollToTop" class="bg-pink-primary p-1 pb-0 ps-3 pe-3" style="font-size: 25px;">
        <i class="fa-solid fa-arrow-up"></i>
    </div>
    <!-- end box show details Hot Dress -->
    <!-- ================================================================================== -->
    <!-- js carousel -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <!-- js for icon -->
    <script src="~/fontawesome/js/fontawesome.min.js"></script>
    <!-- js boostrap -->
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>

